<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.com.temasys.skylink.sdk.sampleapp.ConfigFragment.ManageKeyFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/fbtn_create_key" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_grp_manage_MCU"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:text="MCU"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radio_btn_manage_MCU"
                android:layout_weight="1" />

            <RadioButton
                android:text="No MCU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_btn_manage_no_MCU"
                android:layout_weight="1" />

        </RadioGroup>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvKeyList"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        >

    </android.support.v7.widget.RecyclerView>

</FrameLayout>